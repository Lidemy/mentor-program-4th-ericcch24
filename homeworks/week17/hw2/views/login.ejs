<!DOCTYPE html>

<html>
<head>
  <%- include('template/head') %>
</head>

<body>
  <%- include('template/nav') %>
  <div class="container">
    <div class="text-center m-5">
      <h2>後台管理登入</h2>
    </div>
    <div class="text-center">
      <% if (errorMessage && errorMessage.length > 0) { %>
          <h2 class="alert alert-danger" role="alert">錯誤：<%= errorMessage %></h2>
      <% } %>
      <form action="/login" method="POST">
        <div class="form-group row justify-content-center">
          <label for="inputUsername" class="align-self-center col-form-label">USERNAME</label>
          <div class="col-3">
            <input type="text" name="username" class="form-control" id="inputUsername"/>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <label for="inputPassword" class="align-self-center col-form-label">PASSWORD</label>
          <div class="col-3">
            <input type="password" name="password" class="form-control" id="inputPassword"/>
          </div>
        </div>
        <input type='submit' value="登入" class="btn btn-primary btn-lg m-2"/>
      </form>
    </div>
  </div>
</body>
</html>